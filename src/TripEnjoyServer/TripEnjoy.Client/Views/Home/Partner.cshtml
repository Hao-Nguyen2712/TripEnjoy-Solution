@model dynamic
@{
    ViewData["Title"] = "TripEnjoy Partner Program";
}

<style>
    /* General Style Improvements */
    body {
        font-family: 'Poppins', sans-serif;
    }

    .section {
        padding: 80px 0;
    }

    .section-title {
        text-align: center;
        margin-bottom: 60px;
        font-size: 2.8rem;
        font-weight: 700;
        color: #343a40;
        position: relative;
    }
    
    .section-title::after {
        content: '';
        display: block;
        width: 70px;
        height: 4px;
        background-color: #00796B; /* Primary Color */
        margin: 10px auto 0;
    }

    h1, h2, h3, h4, h5, h6 {
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
    }

    p {
        color: #6c757d;
        line-height: 1.7;
    }

    .btn-primary {
        background-color: #00796B;
        border-color: #00796B;
        padding: 12px 30px;
        font-size: 1rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #005f56;
        border-color: #005f56;
        transform: translateY(-2px);
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('@Url.Content("~/img/tour-details/thumb-1.jpg")');
        background-size: cover;
        background-position: center;
        color: white;
        padding: 120px 0;
        text-align: center;
    }

    .hero-section h1 {
        font-size: 3.8rem;
        font-weight: 700;
    }

    .hero-section p {
        font-size: 1.25rem;
        max-width: 650px;
        margin: 20px auto 30px;
        color: rgba(255,255,255,0.9);
    }

    /* Features Section */
    .feature-icon {
        font-size: 3.5rem;
        color: #00796B; /* Primary Color */
    }
    .feature-card {
        padding: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    /* How It Works Section */
    .how-it-works .step-number {
        width: 60px;
        height: 60px;
        line-height: 60px;
        background-color: #00796B; /* Primary Color */
    }

    /* Testimonials Section */
    .testimonial-card {
        background: #fff;
        border-left: 5px solid #00796B;
        padding: 30px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.07);
        margin-bottom: 20px;
        height: 90%;
    }
    .testimonial-card p {
        font-style: italic;
        color: #555;
    }
    .testimonial-author {
        font-weight: 600;
        color: #343a40;
    }
    .testimonials-slider-container {
        position: relative;
        padding: 0 40px;
        overflow-x: hidden; /* Fix horizontal scrollbar issue */
    }
    .swiper-button-next, .swiper-button-prev {
        color: #00796B;
    }
    .swiper-pagination-bullet-active {
        background-color: #00796B;
    }
    .swiper-pagination {
        position: relative; /* Override Swiper's default absolute positioning */
        bottom: auto;       /* Reset the bottom alignment */
        margin-top: 5px;    /* Add the requested 5px top margin */
    }


    /* FAQ Section - Improved UI */
    .faq-section .card {
        margin-bottom: 15px;
        border: none; /* Remove default border */
        border-radius: 8px; /* Softer edges */
        box-shadow: 0 4px 15px rgba(0,0,0,0.05); /* Subtle shadow */
        overflow: hidden; /* Important for border-radius */
    }
    .faq-section .card-header {
        background-color: #fff;
        padding: 0;
        border-bottom: 1px solid #f0f0f0;
    }
    .faq-section .btn-link {
        display: flex; /* Use flexbox for alignment */
        justify-content: space-between; /* Pushes icon to the right */
        align-items: center; /* Vertically centers text and icon */
        width: 100%;
        text-align: left;
        color: #343a40;
        font-weight: 600; /* Bolder question */
        text-decoration: none;
        padding: 20px;
        transition: background-color 0.3s ease;
    }
    .faq-section .btn-link:hover {
        background-color: #f8f9fa;
        text-decoration: none;
    }
    /* Icon Styling */
    .faq-section .btn-link::after {
        content: '+'; /* Plus icon */
        font-size: 1.5rem;
        font-weight: 400;
        color: #00796B; /* Primary color */
        transition: transform 0.3s ease;
    }
    /* Active/Open State Styling */
    .faq-section .btn-link:not(.collapsed) {
        background-color: #f8f9fa;
        color: #00796B; /* Highlight active question */
    }
    .faq-section .btn-link:not(.collapsed)::after {
        content: 'âˆ’'; /* Minus icon */
    }
    .faq-section .card-body {
        background-color: #fff; /* Keep body white */
        padding: 20px;
        line-height: 1.8;
    }

    /* CTA Section - Improved UI */
    .cta-section-improved {
        background: linear-gradient(45deg, #00796B, #004D40); /* Teal gradient */
        color: white;
        padding: 100px 0;
        border-radius: 10px;
    }
    .cta-section-improved .section-title,
    .cta-section-improved .lead {
        color: white;
    }
    .cta-section-improved .section-title::after {
        background-color: white;
    }
    .cta-section-improved .btn-light {
        background-color: #fff;
        color: #00796B;
        font-weight: 600;
        padding: 15px 35px;
        border-radius: 30px;
    }

</style>

