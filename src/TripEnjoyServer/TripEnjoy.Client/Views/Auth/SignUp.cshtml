@model TripEnjoy.Client.ViewModels.SignUpRequestVM
@{
    ViewData["Title"] = "Sign Up";
    Layout = "_AuthLayout";
}

@section Styles {
    <style>
        .input-with-icon { position: relative; }
        .input-with-icon .form-icon { position: absolute; top: 50%; left: 20px; transform: translateY(-50%); color: #777; }
        .input-with-icon .form-icon-password { position: absolute; top: 50%; right: 20px; transform: translateY(-50%); cursor: pointer; color: #777; }
        .input-with-icon .input { padding-left: 50px; }
    </style>
}

<!-- login-area-start -->
<div class="tg-login-area pt-130 pb-130">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-10">
                <div class="tg-login-wrapper">
                    <div class="tg-login-top text-center mb-30">
                        <h2>Create Your Account</h2>
                        <p>Join us to find your next adventure!</p>
                    </div>
                    <div class="tg-login-form">
                        <div class="tg-tour-about-review-form">
                            <form id="signup-form" asp-action="SignUp" method="post" novalidate>
                                <div class="row">
                                    <div class="col-lg-12 mb-25">
                                        <div class="input-with-icon">
                                            <i class="fa-regular fa-envelope form-icon"></i>
                                            <input class="input" type="email" asp-for="Email" placeholder="Enter your email" autocomplete="email">
                                        </div>
                                    </div>
                                    <div class="col-lg-12 mb-25">
                                        <div class="input-with-icon">
                                            <i class="fa-regular fa-lock form-icon"></i>
                                            <input class="input" type="password" asp-for="Password" placeholder="Password" id="password-input" autocomplete="new-password">
                                            <i class="fa-regular fa-eye form-icon-password" id="toggle-password"></i>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 mb-25">
                                        <div class="input-with-icon">
                                            <i class="fa-regular fa-lock form-icon"></i>
                                            <input class="input" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" id="confirm-password-input" autocomplete="new-password">
                                            <i class="fa-regular fa-eye form-icon-password" id="toggle-confirm-password"></i>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="d-flex align-items-center justify-content-end">
                                            <div class="tg-login-navigate mb-25">
                                                <span>Already have an account? <a asp-action="Index">Log In</a></span>
                                            </div>
                                        </div>
                                        <button id="signup-btn" type="submit" class="tg-btn w-100">Sign Up</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- login-area-end -->

@section Scripts {
    <script>
        $(document).ready(function () {
            // --- Password Toggle Logic ---
            $('#toggle-password').click(function () {
                togglePasswordVisibility($(this), $('#password-input'));
            });

            $('#toggle-confirm-password').click(function () {
                togglePasswordVisibility($(this), $('#confirm-password-input'));
            });

            function togglePasswordVisibility(toggleIcon, passwordInput) {
                toggleIcon.toggleClass('fa-eye fa-eye-slash');
                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                } else {
                    passwordInput.attr('type', 'password');
                }
            }

            // --- Form Validation and Submission Logic ---
            const notyf = new Notyf({
                duration: 5000,
                position: { x: 'right', y: 'top' },
                types: [{ type: 'error', background: 'indianred', dismissible: true }]
            });

            var serverErrors = @Html.Raw(TempData["ErrorMessages"] as string ?? "[]");
            if (serverErrors.length > 0) {
                serverErrors.forEach(function(message) {
                    notyf.error(message);
                });
            }

            $('#signup-form').on('submit', function (e) {
                e.preventDefault();
                var form = $(this);
                form.validate();

                if (!form.valid()) {
                    var validator = form.validate();
                    validator.errorList.forEach(function (error) {
                        notyf.error(error.message);
                    });
                } else {
                    var submitButton = $('#signup-btn');
                    submitButton.prop('disabled', true);
                    submitButton.html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Creating Account...');
                    this.submit();
                }
            });
        });
    </script>
}