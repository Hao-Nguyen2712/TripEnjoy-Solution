@model TripEnjoy.Client.ViewModels.ForgotPasswordRequestVM
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_AuthLayout";
}

@section Styles {
    <style>
        .input-with-icon {
            position: relative;
        }

        .input-with-icon .form-icon {
            position: absolute;
            top: 50%;
            left: 20px;
            transform: translateY(-50%);
            color: #777;
        }

        .input-with-icon .input {
            padding-left: 50px;
        }
    </style>
}

<div class="tg-login-area pt-130 pb-130">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-10">
                <div class="tg-login-wrapper">
                    <div class="tg-login-top text-center mb-30">
                        <div class="login-logo mb-20 py-3">
                            <a asp-controller="Home" asp-action="Index"><img src="~/img/logo/logo-green.png" alt="Logo" style="max-width: 180px;"></a>
                        </div>
                        <h2>Forgot Your Password?</h2>
                        <p>No problem. Enter your email below and we'll send you a code to reset it.</p>
                    </div>
                    <div class="tg-login-form">
                        <div class="tg-tour-about-review-form">
                            <form id="forgot-password-form" asp-action="ForgotPassword" method="post" novalidate>
                                <div class="row">
                                    <div class="col-lg-12 mb-25">
                                        <div class="input-with-icon">
                                            <i class="fa-regular fa-envelope form-icon"></i>
                                            <input class="input" type="email" asp-for="Email" placeholder="Enter your email" autocomplete="email">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <button id="submit-btn" type="submit" class="tg-btn w-100">Send Reset Code</button>
                                    </div>
                                </div>
                            </form>
                             <div class="text-center mt-20">
                                <a asp-action="Index">Back to Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const notyf = new Notyf({
                duration: 5000,
                position: { x: 'right', y: 'top' },
                types: [{ type: 'error', background: 'indianred', dismissible: true }]
            });

            $('#forgot-password-form').on('submit', function (e) {
                e.preventDefault();
                var form = $(this);
                form.validate();

                if (!form.valid()) {
                    var validator = form.validate();
                    validator.errorList.forEach(function (error) {
                        notyf.error(error.message);
                    });
                } else {
                    var submitButton = $('#submit-btn');
                    submitButton.prop('disabled', true);
                    submitButton.html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Sending...');
                    this.submit();
                }
            });
        });
    </script>
}
