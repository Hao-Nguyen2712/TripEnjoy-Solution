@page "/admin/partners"
@using TripEnjoy.Client.Services
@using TripEnjoy.ShareKernel.Dtos
@using MudBlazor
@inject IAdminService AdminService
@inject ISnackbar Snackbar

<PageTitle>Partner Approvals - TripEnjoy Admin</PageTitle>

<AuthorizeView Roles="Admin">
    <Authorized>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
            <MudText Typo="Typo.h4" GutterBottom="true">Partner Approvals</MudText>
            <MudText Typo="Typo.body1" Class="mb-6">Review and approve partner applications</MudText>

            @if (isLoading)
            {
                <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
            }
            else if (partners != null && partners.Any())
            {
                <MudTable Items="@partners" Hover="true" Breakpoint="Breakpoint.Sm" Dense="true">
                    <HeaderContent>
                        <MudTh>Email</MudTh>
                        <MudTh>Business Name</MudTh>
                        <MudTh>Status</MudTh>
                        <MudTh>Requested At</MudTh>
                        <MudTh>Documents</MudTh>
                        <MudTh>Actions</MudTh>
                    </HeaderContent>
                    <RowTemplate Context="partner">
                        <MudTd DataLabel="Email">@partner.Email</MudTd>
                        <MudTd DataLabel="Business Name">@partner.BusinessName</MudTd>
                        <MudTd DataLabel="Status">
                            <MudChip T="string" Size="Size.Small" Color="Color.Warning">@partner.Status</MudChip>
                        </MudTd>
                        <MudTd DataLabel="Requested At">@partner.RequestedAt.ToString("MMM dd, yyyy")</MudTd>
                        <MudTd DataLabel="Documents">
                            <MudText Typo="Typo.body2">@partner.Documents.Count documents</MudText>
                        </MudTd>
                        <MudTd DataLabel="Actions">
                            <MudButtonGroup Size="Size.Small">
                                <MudButton Variant="Variant.Filled" Color="Color.Success"
                                           OnClick="@(() => HandleApprove(partner.Id))">
                                    Approve
                                </MudButton>
                                <MudButton Variant="Variant.Filled" Color="Color.Error"
                                           OnClick="@(() => HandleReject(partner.Id))">
                                    Reject
                                </MudButton>
                            </MudButtonGroup>
                        </MudTd>
                    </RowTemplate>
                </MudTable>
            }
            else
            {
                <MudAlert Severity="Severity.Info">No pending partner approvals</MudAlert>
            }
        </MudContainer>
    </Authorized>
    <NotAuthorized>
        <MudContainer MaxWidth="MaxWidth.Small" Class="mt-8">
            <MudAlert Severity="Severity.Warning">
                You are not authorized to access this page.
            </MudAlert>
        </MudContainer>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<PartnerApprovalDto> partners = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        var response = await AdminService.GetPendingPartnerApprovalsAsync();

        if (response.IsSuccess && response.Data != null)
        {
            partners = response.Data;
        }
        else
        {
            Snackbar.Add(response.Message ?? "Failed to load partners", Severity.Error);
        }

        isLoading = false;
    }

    private async Task HandleApprove(Guid partnerId)
    {
        var response = await AdminService.ApprovePartnerAsync(partnerId);

        if (response.IsSuccess)
        {
            Snackbar.Add("Partner approved successfully", Severity.Success);
            await LoadData();
        }
        else
        {
            Snackbar.Add(response.Message ?? "Failed to approve partner", Severity.Error);
        }
    }

    private async Task HandleReject(Guid partnerId)
    {
        var response = await AdminService.RejectPartnerAsync(partnerId, "Rejected by admin");

        if (response.IsSuccess)
        {
            Snackbar.Add("Partner rejected", Severity.Success);
            await LoadData();
        }
        else
        {
            Snackbar.Add(response.Message ?? "Failed to reject partner", Severity.Error);
        }
    }
}
