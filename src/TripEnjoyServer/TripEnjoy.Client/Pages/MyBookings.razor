@page "/bookings"
@inject IBookingService BookingService
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar
@attribute [Authorize(Roles = "User")]

<PageTitle>My Bookings - TripEnjoy</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-4">My Bookings</MudText>

    @if (_isLoading)
    {
        <MudProgressCircular Indeterminate="true" />
    }
    else if (_bookings.Any())
    {
        <MudGrid>
            @foreach (var booking in _bookings)
            {
                <MudItem xs="12">
                    <MudCard Elevation="3" Class="cursor-pointer" @onclick="@(() => ViewBookingDetails(booking.Id))">
                        <MudCardContent>
                            <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Start">
                                <MudStack Spacing="1">
                                    <MudText Typo="Typo.h6">@booking.PropertyName</MudText>
                                    <MudText Typo="Typo.body2" Color="Color.Secondary">
                                        <MudIcon Icon="@Icons.Material.Filled.CalendarToday" Size="Size.Small" />
                                        @booking.CheckInDate.ToString("MMM dd, yyyy") - @booking.CheckOutDate.ToString("MMM dd, yyyy")
                                    </MudText>
                                    <MudText Typo="Typo.body2">
                                        <MudIcon Icon="@Icons.Material.Filled.People" Size="Size.Small" />
                                        @booking.NumberOfGuests @(booking.NumberOfGuests == 1 ? "Guest" : "Guests")
                                    </MudText>
                                    <MudText Typo="Typo.caption" Color="Color.Secondary">
                                        Booked on @booking.CreatedAt.ToString("MMM dd, yyyy")
                                    </MudText>
                                </MudStack>
                                <MudStack AlignItems="AlignItems.End">
                                    <MudChip T="string" 
                                            Color="@GetStatusColor(booking.Status)" 
                                            Size="Size.Small">
                                        @booking.Status
                                    </MudChip>
                                    <MudText Typo="Typo.h6" Color="Color.Primary">
                                        $@booking.TotalPrice.ToString("F2")
                                    </MudText>
                                </MudStack>
                            </MudStack>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton Variant="Variant.Text" 
                                     Color="Color.Primary" 
                                     OnClick="@(() => ViewBookingDetails(booking.Id))">
                                View Details
                            </MudButton>
                        </MudCardActions>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>

        @if (_pagedResult != null && _pagedResult.TotalPages > 1)
        {
            <MudPagination Class="mt-4" 
                          Count="@_pagedResult.TotalPages" 
                          Selected="@_currentPage" 
                          SelectedChanged="OnPageChanged" />
        }
    }
    else
    {
        <MudPaper Elevation="3" Class="pa-8" Style="text-align: center;">
            <MudIcon Icon="@Icons.Material.Filled.BookOnline" Size="Size.Large" Color="Color.Secondary" Class="mb-4" />
            <MudText Typo="Typo.h6" Class="mb-2">No bookings yet</MudText>
            <MudText Typo="Typo.body2" Class="mb-4">Start exploring properties and make your first booking!</MudText>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/">Browse Properties</MudButton>
        </MudPaper>
    }
</MudContainer>

@code {
    private List<BookingDto> _bookings = new();
    private PagedResult<BookingDto>? _pagedResult;
    private bool _isLoading = true;
    private int _currentPage = 1;
    private int _pageSize = 10;

    protected override async Task OnInitializedAsync()
    {
        await LoadBookings();
    }

    private async Task LoadBookings()
    {
        _isLoading = true;
        try
        {
            var result = await BookingService.GetMyBookingsAsync(_currentPage, _pageSize);
            if (result.IsSuccess && result.Data != null)
            {
                _pagedResult = result.Data;
                _bookings = result.Data.Items;
            }
            else
            {
                Snackbar.Add(result.Message, Severity.Error);
            }
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task OnPageChanged(int page)
    {
        _currentPage = page;
        await LoadBookings();
    }

    private void ViewBookingDetails(Guid bookingId)
    {
        NavigationManager.NavigateTo($"/bookings/{bookingId}");
    }

    private Color GetStatusColor(string status)
    {
        return status.ToLower() switch
        {
            "confirmed" => Color.Success,
            "pending" => Color.Warning,
            "cancelled" => Color.Error,
            "completed" => Color.Info,
            _ => Color.Default
        };
    }
}

<style>
    .cursor-pointer {
        cursor: pointer;
    }
</style>
