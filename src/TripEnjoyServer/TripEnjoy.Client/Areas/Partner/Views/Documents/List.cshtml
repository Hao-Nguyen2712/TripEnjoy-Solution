@model TripEnjoy.Client.ViewModels.PagedListVM<TripEnjoy.Client.ViewModels.PartnerDocumentVM>
@{
    ViewData["Title"] = "My Documents";
}

<div class="page-content">
    <div class="container-fluid">
        <!-- Page Title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">My Documents</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="/partner/home">Dashboard</a></li>
                            <li class="breadcrumb-item active">My Documents</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Bar -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">Document Management</h5>
                                <p class="text-muted mb-0">Track your uploaded documents and their verification status</p>
                            </div>
                            <div>
                                <a href="/partner/documents/upload" class="btn btn-primary">
                                    <i class="fas fa-plus me-1"></i>Upload New Document
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Document Status Overview -->
        <div class="row">
            <div class="col-xl-3 col-md-6">
                <div class="card card-h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <span class="text-muted mb-3 lh-1 d-block text-truncate">Total Documents</span>
                                <h4 class="mb-3">
                                    <span class="counter-value" data-target="@Model.TotalCount">@Model.TotalCount</span>
                                </h4>
                            </div>
                            <div class="flex-shrink-0">
                                <div class="avatar-sm rounded-circle bg-soft-primary">
                                    <span class="avatar-title bg-soft-primary text-primary rounded-circle fs-3">
                                        <i class="fas fa-file-alt"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card card-h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <span class="text-muted mb-3 lh-1 d-block text-truncate">Pending Review</span>
                                <h4 class="mb-3">
                                    <span class="counter-value" data-target="@Model.Items.Count(d => d.Status == "PendingReview")">@Model.Items.Count(d => d.Status == "PendingReview")</span>
                                </h4>
                            </div>
                            <div class="flex-shrink-0">
                                <div class="avatar-sm rounded-circle bg-soft-warning">
                                    <span class="avatar-title bg-soft-warning text-warning rounded-circle fs-3">
                                        <i class="fas fa-clock"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card card-h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <span class="text-muted mb-3 lh-1 d-block text-truncate">Approved</span>
                                <h4 class="mb-3">
                                    <span class="counter-value" data-target="@Model.Items.Count(d => d.Status == "Approved")">@Model.Items.Count(d => d.Status == "Approved")</span>
                                </h4>
                            </div>
                            <div class="flex-shrink-0">
                                <div class="avatar-sm rounded-circle bg-soft-success">
                                    <span class="avatar-title bg-soft-success text-success rounded-circle fs-3">
                                        <i class="fas fa-check-circle"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card card-h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <span class="text-muted mb-3 lh-1 d-block text-truncate">Rejected</span>
                                <h4 class="mb-3">
                                    <span class="counter-value" data-target="@Model.Items.Count(d => d.Status == "Rejected")">@Model.Items.Count(d => d.Status == "Rejected")</span>
                                </h4>
                            </div>
                            <div class="flex-shrink-0">
                                <div class="avatar-sm rounded-circle bg-soft-danger">
                                    <span class="avatar-title bg-soft-danger text-danger rounded-circle fs-3">
                                        <i class="fas fa-times-circle"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Documents List -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">
                            <i class="fas fa-list me-2"></i>Uploaded Documents
                        </h4>
                    </div>
                    <div class="card-body">
                        @if (Model.Items.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-nowrap table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th scope="col">Document Type</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Uploaded Date</th>
                                            <th scope="col">Reviewed Date</th>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var document in Model.Items)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="flex-shrink-0 me-3">
                                                            <div class="avatar-xs">
                                                                <span class="avatar-title bg-soft-primary text-primary rounded-circle fs-6">
                                                                    <i class="fas @(GetDocumentIcon(document.DocumentType))"></i>
                                                                </span>
                                                            </div>
                                                        </div>
                                                        <div class="flex-grow-1">
                                                            <h6 class="mb-0">@document.DocumentTypeName</h6>
                                                            <small class="text-muted">@document.DocumentType</small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    @{
                                                        var statusClass = document.Status switch
                                                        {
                                                            "Approved" => "success",
                                                            "Rejected" => "danger",
                                                            "PendingReview" => "warning",
                                                            _ => "secondary"
                                                        };
                                                    }
                                                    <span class="badge bg-@statusClass-subtle text-@statusClass">
                                                        @document.StatusDisplayName
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="text-muted">@document.CreatedAt.ToString("MMM dd, yyyy")</span>
                                                    <br>
                                                    <small class="text-muted">@document.CreatedAt.ToString("HH:mm")</small>
                                                </td>
                                                <td>
                                                    @if (document.ReviewedAt.HasValue)
                                                    {
                                                        <span class="text-muted">@document.ReviewedAt.Value.ToString("MMM dd, yyyy")</span>
                                                        <br>
                                                        <small class="text-muted">@document.ReviewedAt.Value.ToString("HH:mm")</small>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="dropdown">
                                                        <button class="btn btn-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                            <i class="fas fa-ellipsis-v"></i>
                                                        </button>
                                                        <ul class="dropdown-menu">
                                                            <li>
                                                                <a class="dropdown-item" href="@document.DocumentUrl" target="_blank">
                                                                    <i class="fas fa-eye me-2"></i>View Document
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="dropdown-item" href="@document.DocumentUrl" download>
                                                                    <i class="fas fa-download me-2"></i>Download
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            @if (Model.TotalPages > 1)
                            {
                                <div class="row mt-4">
                                    <div class="col-sm-6">
                                        <div class="dataTables_info">
                                            Showing @((Model.PageNumber - 1) * Model.PageSize + 1) to @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount)) of @Model.TotalCount entries
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="dataTables_paginate paging_simple_numbers float-end">
                                            <ul class="pagination pagination-rounded mb-0">
                                                @if (Model.HasPreviousPage)
                                                {
                                                    <li class="page-item">
                                                        <a class="page-link" href="?pageNumber=@(Model.PageNumber - 1)&pageSize=@Model.PageSize">
                                                            <i class="fas fa-angle-left"></i>
                                                        </a>
                                                    </li>
                                                }

                                                @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                                                {
                                                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                                        <a class="page-link" href="?pageNumber=@i&pageSize=@Model.PageSize">@i</a>
                                                    </li>
                                                }

                                                @if (Model.HasNextPage)
                                                {
                                                    <li class="page-item">
                                                        <a class="page-link" href="?pageNumber=@(Model.PageNumber + 1)&pageSize=@Model.PageSize">
                                                            <i class="fas fa-angle-right"></i>
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <div class="mb-3">
                                    <i class="fas fa-folder-open text-muted" style="font-size: 3rem;"></i>
                                </div>
                                <h5 class="text-muted">No Documents Uploaded Yet</h5>
                                <p class="text-muted mb-3">Start by uploading your business verification documents.</p>
                                <a href="/partner/documents/upload" class="btn btn-primary">
                                    <i class="fas fa-upload me-1"></i>Upload Your First Document
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Required Documents Checklist -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">
                            <i class="fas fa-tasks me-2"></i>Required Documents Checklist
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="checklist-item d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0">
                                        <div class="avatar-xs">
                                            <span class="avatar-title bg-soft-primary text-primary rounded-circle fs-6">
                                                <i class="fas fa-certificate"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">Business License</h6>
                                        <p class="text-muted mb-0">Required for verification</p>
                                    </div>
                                    <div class="flex-shrink-0">
                                        <span class="badge bg-danger-subtle text-danger" id="status-BusinessLicense">Not Uploaded</span>
                                    </div>
                                </div>

                                <div class="checklist-item d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0">
                                        <div class="avatar-xs">
                                            <span class="avatar-title bg-soft-success text-success rounded-circle fs-6">
                                                <i class="fas fa-file-invoice"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">Tax Identification</h6>
                                        <p class="text-muted mb-0">Required for verification</p>
                                    </div>
                                    <div class="flex-shrink-0">
                                        <span class="badge bg-danger-subtle text-danger" id="status-TaxIdentification">Not Uploaded</span>
                                    </div>
                                </div>

                                <div class="checklist-item d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0">
                                        <div class="avatar-xs">
                                            <span class="avatar-title bg-soft-info text-info rounded-circle fs-6">
                                                <i class="fas fa-map-marker-alt"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">Proof of Address</h6>
                                        <p class="text-muted mb-0">Required for verification</p>
                                    </div>
                                    <div class="flex-shrink-0">
                                        <span class="badge bg-danger-subtle text-danger" id="status-ProofOfAddress">Not Uploaded</span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="checklist-item d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0">
                                        <div class="avatar-xs">
                                            <span class="avatar-title bg-soft-warning text-warning rounded-circle fs-6">
                                                <i class="fas fa-building"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">Company Registration</h6>
                                        <p class="text-muted mb-0">Optional but recommended</p>
                                    </div>
                                    <div class="flex-shrink-0">
                                        <span class="badge bg-secondary-subtle text-secondary" id="status-CompanyRegistration">Optional</span>
                                    </div>
                                </div>

                                <div class="checklist-item d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0">
                                        <div class="avatar-xs">
                                            <span class="avatar-title bg-soft-secondary text-secondary rounded-circle fs-6">
                                                <i class="fas fa-university"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">Bank Statement</h6>
                                        <p class="text-muted mb-0">Optional but recommended</p>
                                    </div>
                                    <div class="flex-shrink-0">
                                        <span class="badge bg-secondary-subtle text-secondary" id="status-BankStatement">Optional</span>
                                    </div>
                                </div>

                                <div class="checklist-item d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0">
                                        <div class="avatar-xs">
                                            <span class="avatar-title bg-soft-dark text-dark rounded-circle fs-6">
                                                <i class="fas fa-id-card"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">Identity Document</h6>
                                        <p class="text-muted mb-0">Optional but recommended</p>
                                    </div>
                                    <div class="flex-shrink-0">
                                        <span class="badge bg-secondary-subtle text-secondary" id="status-IdentityDocument">Optional</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetDocumentIcon(string documentType)
    {
        return documentType switch
        {
            "BusinessLicense" => "fa-certificate",
            "TaxIdentification" => "fa-file-invoice",
            "ProofOfAddress" => "fa-map-marker-alt",
            "CompanyRegistration" => "fa-building",
            "BankStatement" => "fa-university",
            "IdentityDocument" => "fa-id-card",
            _ => "fa-file"
        };
    }
}

@section Scripts {
    <script>
        // Update status counts for checklist
        document.addEventListener('DOMContentLoaded', function() {
            @foreach (var doc in Model.Items)
            {
                <text>
                updateChecklistStatus('@doc.DocumentType', '@doc.Status');
                </text>
            }
        });

        function updateChecklistStatus(documentType, status) {
            const statusElement = document.getElementById('status-' + documentType);
            if (statusElement) {
                let badgeClass, statusText;
                switch (status) {
                    case 'Approved':
                        badgeClass = 'bg-success-subtle text-success';
                        statusText = 'Approved';
                        break;
                    case 'Rejected':
                        badgeClass = 'bg-danger-subtle text-danger';
                        statusText = 'Rejected';
                        break;
                    case 'PendingReview':
                        badgeClass = 'bg-warning-subtle text-warning';
                        statusText = 'Under Review';
                        break;
                    default:
                        badgeClass = 'bg-secondary-subtle text-secondary';
                        statusText = 'Optional';
                }
                statusElement.className = 'badge ' + badgeClass;
                statusElement.textContent = statusText;
            }
        }
    </script>
}