@model IEnumerable<TripEnjoy.Client.ViewModels.PropertyListItemVM>
@{
    ViewData["Title"] = "My Properties";
}

<div class="container-fluid p-4">
    <!-- Page Header -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="d-flex align-items-center justify-content-between">           
                    <div>
                        <a asp-controller="Properties" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Add New Property
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <!-- Error Message -->
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <!-- Properties List -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-building me-2"></i>Property Listings (@Model.Count())
                        </h5>
                        <div class="card-header-action">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-sm btn-outline-secondary" id="gridView">
                                    <i class="fas fa-th-large"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-secondary active" id="listView">
                                    <i class="fas fa-list"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <!-- List View -->
                        <div id="propertyListView">
                            @foreach (var property in Model)
                            {
                                <div class="property-item border rounded p-3 mb-3">
                                    <div class="row align-items-center">
                                        <div class="col-md-2">
                                            @if (property.Images.Any())
                                            {
                                                <img src="@property.Images.FirstOrDefault(i => i.IsPrimary)?.ImageUrl ?? property.Images.First().ImageUrl" 
                                                     alt="@property.Name" class="img-fluid rounded property-thumbnail">
                                            }
                                            else
                                            {
                                                <div class="property-placeholder bg-light rounded d-flex align-items-center justify-content-center">
                                                    <i class="fas fa-image text-muted fa-2x"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-md-6">
                                            <h6 class="mb-1">
                                                <a asp-controller="Properties" asp-action="Details" asp-route-id="@property.Id" 
                                                   class="text-decoration-none">@property.Name</a>
                                            </h6>
                                            <p class="text-muted mb-1 small">
                                                <i class="fas fa-map-marker-alt me-1"></i>@property.FullAddress
                                            </p>
                                            <p class="text-muted mb-1 small">
                                                <i class="fas fa-tag me-1"></i>@property.PropertyTypeName
                                            </p>
                                            @if (!string.IsNullOrEmpty(property.Description))
                                            {
                                                <p class="text-muted mb-0 small property-description">
                                                    @(property.Description.Length > 100 ? property.Description.Substring(0, 100) + "..." : property.Description)
                                                </p>
                                            }
                                        </div>
                                        <div class="col-md-2 text-center">
                                            <span class="badge @property.StatusBadgeClass mb-2">@property.Status</span>
                                            @if (property.AverageRating.HasValue)
                                            {
                                                <div class="text-warning small">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        @if (i <= property.AverageRating)
                                                        {
                                                            <i class="fas fa-star"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="far fa-star"></i>
                                                        }
                                                    }
                                                    <small class="text-muted ms-1">(@property.ReviewCount)</small>
                                                </div>
                                            }
                                            else
                                            {
                                                <small class="text-muted">No reviews yet</small>
                                            }
                                        </div>
                                        <div class="col-md-2 text-end">
                                            <div class="btn-group" role="group">
                                                <a asp-controller="Properties" asp-action="Details" asp-route-id="@property.Id" 
                                                   class="btn btn-sm btn-outline-primary" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-controller="Properties" asp-action="Edit" asp-route-id="@property.Id" 
                                                   class="btn btn-sm btn-outline-success" title="Edit Property">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-controller="Properties" asp-action="ManageImages" asp-route-id="@property.Id" 
                                                   class="btn btn-sm btn-outline-info" title="Manage Images">
                                                    <i class="fas fa-images"></i>
                                                </a>
                                            </div>
                                            <div class="mt-2">
                                                <small class="text-muted">
                                                    Created: @property.CreatedAt.ToString("MMM dd, yyyy")
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Grid View (Hidden by default) -->
                        <div id="propertyGridView" style="display: none;">
                            <div class="row">
                                @foreach (var property in Model)
                                {
                                    <div class="col-lg-4 col-md-6 mb-4">
                                        <div class="card property-card h-100">
                                            <div class="position-relative">
                                                @if (property.Images.Any())
                                                {
                                                    <img src="@property.Images.FirstOrDefault(i => i.IsPrimary)?.ImageUrl ?? property.Images.First().ImageUrl" 
                                                         alt="@property.Name" class="card-img-top property-card-image">
                                                }
                                                else
                                                {
                                                    <div class="card-img-top property-card-placeholder bg-light d-flex align-items-center justify-content-center">
                                                        <i class="fas fa-image text-muted fa-3x"></i>
                                                    </div>
                                                }
                                                <span class="badge @property.StatusBadgeClass position-absolute top-0 end-0 m-2">@property.Status</span>
                                            </div>
                                            <div class="card-body d-flex flex-column">
                                                <h6 class="card-title mb-2">
                                                    <a asp-controller="Properties" asp-action="Details" asp-route-id="@property.Id" 
                                                       class="text-decoration-none">@property.Name</a>
                                                </h6>
                                                <p class="text-muted mb-1 small">
                                                    <i class="fas fa-map-marker-alt me-1"></i>@property.FullAddress
                                                </p>
                                                <p class="text-muted mb-2 small">
                                                    <i class="fas fa-tag me-1"></i>@property.PropertyTypeName
                                                </p>
                                                @if (property.AverageRating.HasValue)
                                                {
                                                    <div class="text-warning small mb-2">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            @if (i <= property.AverageRating)
                                                            {
                                                                <i class="fas fa-star"></i>
                                                            }
                                                            else
                                                            {
                                                                <i class="far fa-star"></i>
                                                            }
                                                        }
                                                        <small class="text-muted ms-1">(@property.ReviewCount)</small>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <small class="text-muted mb-2 d-block">No reviews yet</small>
                                                }
                                                <div class="mt-auto">
                                                    <div class="btn-group w-100 mb-2" role="group">
                                                        <a asp-controller="Properties" asp-action="Details" asp-route-id="@property.Id" 
                                                           class="btn btn-sm btn-outline-primary">
                                                            <i class="fas fa-eye me-1"></i>View
                                                        </a>
                                                        <a asp-controller="Properties" asp-action="Edit" asp-route-id="@property.Id" 
                                                           class="btn btn-sm btn-outline-success">
                                                            <i class="fas fa-edit me-1"></i>Edit
                                                        </a>
                                                    </div>
                                                    <div class="btn-group w-100" role="group">
                                                        <a asp-controller="Properties" asp-action="ManageImages" asp-route-id="@property.Id" 
                                                           class="btn btn-sm btn-outline-info">
                                                            <i class="fas fa-images me-1"></i>Images
                                                        </a>
                                                    </div>
                                                    <small class="text-muted mt-2 d-block text-center">
                                                        Created: @property.CreatedAt.ToString("MMM dd, yyyy")
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Empty State -->
                        <div class="text-center py-5">
                            <div class="mb-4">
                                <i class="fas fa-building fa-4x text-muted"></i>
                            </div>
                            <h5 class="text-muted">No Properties Yet</h5>
                            <p class="text-muted mb-4">
                                You haven't added any properties yet. Start by creating your first property listing.
                            </p>
                            <a asp-controller="Properties" asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Add Your First Property
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .page-title-box {
            padding-bottom: 1.5rem;
            border-bottom: 1px solid #eee;
            margin-bottom: 1.5rem;
        }
        
        .property-item {
            transition: all 0.3s ease;
        }
        
        .property-item:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        
        .property-thumbnail {
            height: 80px;
            width: 100%;
            object-fit: cover;
        }
        
        .property-placeholder {
            height: 80px;
            width: 100%;
        }
        
        .property-card-image {
            height: 200px;
            object-fit: cover;
        }
        
        .property-card-placeholder {
            height: 200px;
        }
        
        .property-card {
            transition: all 0.3s ease;
        }
        
        .property-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        
        .property-description {
            line-height: 1.4;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // View toggle functionality
            $('#listView').click(function() {
                $(this).addClass('active');
                $('#gridView').removeClass('active');
                $('#propertyListView').show();
                $('#propertyGridView').hide();
            });
            
            $('#gridView').click(function() {
                $(this).addClass('active');
                $('#listView').removeClass('active');
                $('#propertyListView').hide();
                $('#propertyGridView').show();
            });
        });
    </script>
}